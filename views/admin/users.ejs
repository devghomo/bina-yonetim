<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-4">
        <h1>Kullanıcılar</h1>
        <form id="filterForm">
            <div class="form-group">
                <label for="block">Blok:</label>
                <select class="form-control" id="block" name="block">
                    <option value="">Hepsi</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                </select>
            </div>
            <div class="form-group">
                <label for="apartmentSize">Daire Büyüklüğü:</label>
                <select class="form-control" id="apartmentSize" name="apartmentSize">
                    <option value="">Hepsi</option>
                    <option value="3+1">3+1</option>
                    <option value="4+1">4+1</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Filtrele</button>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">İsim</th>
                    <th scope="col">Telefon</th>
                    <th scope="col">Blok</th>
                    <th scope="col">Kapı Numarası</th>
                    <th scope="col">Daire Büyüklüğü</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> { %>
                    <tr>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.phone %>
                        </td>
                        <td>
                            <%= user.block %>
                        </td>
                        <td>
                            <%= user.doorNumber %>
                        </td>
                        <td>
                            <%= user.apartmentSize %>
                        </td>
                        <td>
                            <button class="btn btn-danger" onclick="deleteUser('<%= user._id %>')">Sil</button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <!-- Düzenleme Formu -->
        <div id="editForm"></div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function deleteUser(userId) {
            // Kullanıcıyı silmek için gerekli işlemler burada yapılacak
            fetch('/deleteUser/' + userId, {
                method: 'DELETE'
            })
                .then(response => {
                    if (response.ok) {
                        console.log('Kullanıcı başarıyla silindi.');
                        // Kullanıcıyı yeniden yükleme veya başka bir işlem yapma
                    } else {
                        console.error('Kullanıcı silinemedi.');
                    }
                })
                .catch(error => {
                    console.error('Bir hata oluştu:', error);
                });
        }
    </script>
</body>

</html>